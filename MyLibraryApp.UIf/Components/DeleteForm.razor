
<div class="modal fade show" tabindex="-1" style="display: block;" role="dialog" @onclick="HandleBackgroundClick">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">@Title</h5>
            </div>
            <div class="modal-body">
                @Message
            </div>
            <div class="modal-footer">
                <button class="btn btn-danger" @onclick="Confirm">Igen</button>
                <button class="btn btn-secondary" @onclick="Cancel">Mégse</button>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter] public string Title { get; set; } = "Megerősítés";
    [Parameter] public string Message { get; set; } = "Biztosan törölni szeretnéd?";
    [Parameter] public EventCallback OnClose { get; set; }
    [Parameter] public EventCallback<Guid> OnDelete { get; set; }
    [Parameter] public Guid EntityId { get; set; }

    private async Task Confirm() => await OnDelete.InvokeAsync(EntityId);
    private async Task Cancel() => await OnClose.InvokeAsync();
    private async Task HandleBackgroundClick() => await OnClose.InvokeAsync();
}